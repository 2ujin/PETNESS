<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme2" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="CheckBoxTheme" parent="Widget.AppCompat.Button">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="CheckBoxTheme2" parent="Widget.AppCompat.Button">
        <item name="colorControlNormal">@color/dark</item>
    </style>

    <style name="TabHostTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="SpinnerTheme" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/dark</item>
        <item name="colorControlNormal">@color/dark</item>
    </style>
</resources>

